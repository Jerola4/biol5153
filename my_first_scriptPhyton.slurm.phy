#!/bin/bash
#SBATCH --job-name=test
#SBATCH --partition=comp12
#SBATCH --nodes=1
#SBATCH --qos=cs1
#SBATCH --tasks-per-node=32
#SBATCH --time=72:00:00
#SBATCH -o test_%j.out
#SBATCH -e test_%j.err
#SBATCH --mail-type=ALL
#SBATCH --mail-user=jr130@uark.edu

export OMP_NUM_THREADS=32

module purge
module load intel/18.0.1 impi/18.0.1 mkl/18.0.1

cd $SLURM_SUBMIT_DIR

# job commands here
import glob

for archivo in *.fasta; do
    echo "Archivo: $archivo"
    # Imprimir la primera línea que comienza con '>' y la siguiente línea
    sed -n '/^>/ {p; n; p; q;}' "$archivo"
done
archivos_fasta = glob.glob('*.fasta')
